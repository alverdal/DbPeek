<local:BaseDialogWindow
    x:Class="DbPeek.UserInterface.ConfigurationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:WorkAlready" 
    mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="280" 
    Width="300" Height="280">
    <Grid Background="#FF252526">
        <Button x:Name="btnSaveSettings" Content="Done" HorizontalAlignment="Left" Margin="170,200,0,0" VerticalAlignment="Top" Width="112" Height="39" Click="btnSaveSettings_Click"/>
        <TextBox x:Name="connectionStringInput" HorizontalAlignment="Left" Height="137" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Background="#FF343434" Foreground="#FFB9B9B9" Text="asfafsaf"/>
        <Label Content="Connection String" HorizontalAlignment="Left" Margin="7,5,0,0" VerticalAlignment="Top" Foreground="AliceBlue"/>
        <Button x:Name="btnResetAllSettings_DEBUG" Content="Reset (DEBUG)" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="102" Height="39" IsEnabled="False" Visibility="Hidden"/>

    </Grid>
</local:BaseDialogWindow>